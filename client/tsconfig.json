{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@remix-run/node", "vite/client"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@layout/*": ["./app/layout/*"],
      "@components/*": ["./app/components/*"],
      "@interfaces/*": ["./app/interfaces/*"],
      "@styles/*": ["./app/styles/*"],
      "@utils/*": ["./app/utils/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@widgets/*": ["./app/widgets/*"],
      "@contexts/*": ["./app/contexts/*"],
      "@configs/*": ["./app/configs/*"],
      "@loggers/*": ["./app/loggers/*"],
      "@ui/*": ["./app/ui/*"]
    },

    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}
